<div id="<%= dom_id task %>" data-controller="toggle">
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p data-toggle-target="message">
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= task.completed %>
  </p>

  <p>
    <%= button_to "Complete Task", toggle_complete_path(task), 
    method: :patch, class: "btn btn-primary", data: { action: "click->toggle#hide"} %>
  </p>

</div>
