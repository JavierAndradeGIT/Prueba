<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <h2>All tasks completed</h2>
  <% @tasksT.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task, class: "btn btn-primary" %>
    </p>
  <% end %>

  <h2>All tasks incompleted</h2>
  <% @tasksF.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>

</div>

<%= link_to "New task", new_task_path %>
